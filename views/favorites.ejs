<h2>Favorites</h2>

<p><%= pokemon.length %> favorites!</p>

<% pokemon.forEach((p)=>{ %>
<div class="well">
  <h3>
    <a href="/pokemon/<%= p.name %>">
      <%= p.name %>
    </a>
  </h3>
  <form method="POST" action="/pokemon?_method=DELETE">
    <input type="hidden" name="name" value="<%= p.name %>" />
    <button type="submit">Release back into the Wild..</button>
  </form>
</div>
<% }); %>
